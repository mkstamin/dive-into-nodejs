<%- include('../../assets/head.ejs') %>



<div class="container" style="height: 520px;">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="jumbotron mt-5 pt-4 pb-4">
                <h4 class="text-center pb-3 text-uppercase text-info">Login your account</h4>
                <form action="/auth/login" method="post">
                    <div class="form-group">
                        <label for="email" class="small mb-0">Enter your eamil address</label>
                        <input class="form-control <%= error.email?'is-invalid':'' %>" type="email" name="email"
                            id="email">
                        <small id="helpId" class="invalid-feedback">
                            <%= error.email && error.email %>
                        </small>
                    </div>
                    <div class="form-group">
                        <label for="password" class="small mb-0">Enter your password</label>
                        <input class="form-control <%= error.password?'is-invalid':'' %>" type="password"
                            name="password" id="password">
                        <small id="helpId" class="invalid-feedback">
                            <%= error.password && error.password %>
                        </small>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Login">
                </form>
                <a href="/auth/signup" class="small">You don't have an account ? Creat an one...</a>
            </div>
        </div>
    </div>
</div>



<%- include('../../assets/footer.ejs') %>
</body>

</html>