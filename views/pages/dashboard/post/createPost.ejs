<%- include('../../../assets/head.ejs') %>


<div class="container-fluid">
    <div class="row">

        <div class="col-md-3">
            <%- include('../../../assets/sidebar.ejs') %>
        </div>

        <div class="col-md-9">
            <div class="row">
                <div class="card card-body m-5">
            <form action="/posts/create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Enter You Post Title</label>
                    <input type="text" name="title" id="title" value="<%= value.title?value.title:'' %>" class="form-control <%= error.title?'is-invalid':'' %>">
                    <small id="helpId" class="invalid-feedback">
                        <%= error.title %>
                    </small>
                </div>
                <div class="form-group">
                    <label for="tiny-mc-post-body">Enter You Post Body</label>
                    <textarea name="body" id="tiny-mc-post-body" class="form-control <%= error.body?'is-invalid':'' %>">
                    <%= value.body?value.body:'' %>
                    </textarea>
                    <small id="helpId" class="invalid-feedback">
                        <%= error.body %>
                    </small>
                </div>
                <div class="form-group">
                    <label for="tags">Enter Some Tags (Max 10) </label>
                    <input type="text" name="tags" id="tags" value="<%= value.tags?value.tags:'' %>" class="form-control" placeholder="tag1,tag2,tag3">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" name="post-thumbnail" class="custom-file-input" id="formGroupFile">
                        <label for="formGroupFile" class="custom-file-label" id="customfilelabel">Choose File</label>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="Create Post">
            </form>
            </div>
            </div>
        </div>

    </div>
</div>

<%- include('../../../assets/footer.ejs') %>

<script src="https://cdn.tiny.cloud/1/rb53vvm6xo2oc6gtwr4dxw4wyglg1kwi08s3iksa6uti5z24/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script src="/scripts/tinymce.js"></script>
<script>
    $('#formGroupFile').on('change',function(e){
        let fileName=e.target.files[0].name;
        $(this).next('#customfilelabel').html(fileName);
    })
</script>

</body>

</html>